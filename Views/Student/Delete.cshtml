@model ILearn.Models.Student
@{
    ViewData["Title"] = "Delete Student";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <div class="card shadow-lg border-0 border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="mb-0">⚠️ Delete Student</h3>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning">
                        <strong>Warning!</strong> This action cannot be undone. This will permanently delete the student record and all associated data.
                    </div>

                    <h4 class="mb-4">Are you sure you want to delete this student?</h4>

                    <div class="card bg-light mb-4">
                        <div class="card-body">
                            <p><strong>Student ID:</strong> @Model.StudentId</p>
                            <p><strong>Name:</strong> @Model.Name</p>
                            <p><strong>Semester:</strong> @Model.Semester</p>
                            <p><strong>Attendance:</strong> @Model.Attendance%</p>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="StudentId" />
                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                            <a asp-action="Details" asp-route-id="@Model.StudentId" class="btn btn-info">View Details</a>
                            <button type="submit" class="btn btn-danger">Yes, Delete Student</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

