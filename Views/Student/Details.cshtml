@model ILearn.Models.Student
@{
    ViewData["Title"] = "Student Details";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>👤 @Model.Name</h2>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.StudentId" class="btn btn-warning">✏️ Edit</a>
            <a asp-action="Index" class="btn btn-secondary">← Back to List</a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card mb-3">
                <div class="card-header bg-primary text-white">
                    <h5>📋 Basic Information</h5>
                </div>
                <div class="card-body">
                    <p><strong>Student ID:</strong> @Model.StudentId</p>
                    <p><strong>Name:</strong> @Model.Name</p>
                    <p><strong>Semester:</strong> @Model.Semester</p>
                    <p>
                        <strong>Attendance:</strong>
                        <span class="badge bg-@(Model.Attendance >= 80 ? "success" : Model.Attendance >= 70 ? "warning" : "danger")">
                            @Model.Attendance%
                        </span>
                    </p>
                    <p><strong>Assignments:</strong> @Model.AssignmentsSubmitted / @Model.TotalAssignments</p>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card mb-3">
                <div class="card-header bg-success text-white">
                    <h5>📊 Subjects & Marks</h5>
                </div>
                <div class="card-body">
                    @foreach (var subject in Model.Subjects)
                    {
                        var percentage = (double)subject.Value.Marks / subject.Value.Total * 100;
                        <div class="mb-3">
                            <strong>@subject.Key:</strong> @subject.Value.Marks / @subject.Value.Total
                            <div class="progress">
                                <div class="progress-bar bg-@(percentage >= 85 ? "success" : percentage >= 60 ? "warning" : "danger")"
                                     style="width: @percentage%">
                                    @percentage.ToString("F1")%
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-info text-white">
            <h5>📝 Performance Notes</h5>
        </div>
        <div class="card-body">
            <p>@Model.PerformanceNotes</p>
        </div>
    </div>
</div>